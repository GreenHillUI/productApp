{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        // Turn on/off rules here as needed
        "no-multiple-empty-lines":"off",
        "no-console":"off",
        "quotes": "off",
        "max-len": "off",
        "eol-last":"off",
        "linebreak-style":"off",
        "default-param-last":"off",
        "react/prop-types":"off",
        "spaced-comment":"off",
        "comma-dangle":"off",
        "jsx-quotes": "off",
        "padded-blocks":"off",
        "no-trailing-spaces":"off",
        "no-debugger":"off",
        "no-plusplus": "off",
        "radix": "off",
        "react/jsx-no-bind": "off",
        "jsx-a11y/click-events-have-key-events": "off",
        "jsx-a11y/no-noninteractive-element-interactions": "off"
    }
}
